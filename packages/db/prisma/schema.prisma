generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum TenancyMode { SAAS SELF_HOSTED }
enum Role { OWNER ADMIN MANAGER SUPPORT MARKETING READONLY }

enum ProductStatus { DRAFT PUBLISHED ARCHIVED }
enum OrderStatus {
  DRAFT
  PENDING_PAYMENT
  PAID
  FULFILLING
  FULFILLED
  DELIVERED
  CANCELED
  RETURN_REQUESTED
  RETURNED
  REFUNDED
}
enum PaymentStatus { REQUIRES_ACTION PROCESSING SUCCEEDED FAILED REFUNDED PARTIALLY_REFUNDED }
enum FulfillmentStatus { UNFULFILLED PARTIAL FULFILLED }
enum ReturnStatus { REQUESTED APPROVED REJECTED RECEIVED REFUNDED CLOSED }
enum DiscountType { PERCENT FIXED FREE_SHIPPING }
enum DiscountAppliesTo { ORDER SHIPPING PRODUCT }
enum ImportStatus { QUEUED RUNNING COMPLETED FAILED }

model Tenant {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  primaryDomain String?  @unique
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  settings      TenantSettings?
  memberships   Membership[]
  auditLogs     AuditLog[]

  products      Product[]
  categories    Category[]
  tags          Tag[]
  shippingZones ShippingZone[]
  shippingMethods ShippingMethod[]
  taxSettings   TaxSettings?

  customers     Customer[]
  carts         Cart[]
  orders        Order[]

  discounts     Discount[]
  giftCards     GiftCard[]
  storeCredits  StoreCreditLedger[]
  loyaltyRules  LoyaltyRule[]
  affiliates    Affiliate[]
  subscribers   NewsletterSubscriber[]

  blogPosts     BlogPost[]
  returnRequests ReturnRequest[]

  importJobs    ImportJob[]
  apps          AppIntegration[]
}

model TenantSettings {
  tenantId     String @id
  tenancyMode  TenancyMode @default(SAAS)

  brandName       String
  logoUrl         String?
  faviconUrl      String?
  heroImageUrl    String?
  themeJson       Json?
  contactEmail    String?
  contactPhone    String?
  contactAddress  String?

  seoTitleDefault String?
  seoDescDefault  String?
  ogImageDefault  String?

  useGenderNeutralLanguage Boolean @default(true)
  collectPronouns          Boolean @default(false)

  baseCurrency      String   @default("USD")
  enabledCurrencies String[] @default(["USD"])
  cookieConsentEnabled Boolean @default(true)

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
}

model Membership {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
}

model AuditLog {
  id        String   @id @default(cuid())
  tenantId  String
  actorId   String?
  action    String
  entity    String
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Customer {
  id        String   @id @default(cuid())
  tenantId  String
  email     String
  name      String?
  phone     String?
  pronouns  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loyalty LoyaltyAccount?
  orders  Order[]
  carts   Cart[]

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email], name: "tenantId_email")
}

model Category {
  id        String @id @default(cuid())
  tenantId  String
  name      String
  handle    String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  ProductCategory[]

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@unique([tenantId, handle])
}

model Tag {
  id        String @id @default(cuid())
  tenantId  String
  name      String
  createdAt DateTime @default(now())

  products ProductTag[]

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@unique([tenantId, name])
}

model Product {
  id          String        @id @default(cuid())
  tenantId    String
  title       String
  handle      String
  description String?
  status      ProductStatus @default(DRAFT)

  seoTitle    String?
  seoDesc     String?
  ogImageUrl  String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  categories  ProductCategory[]
  tags        ProductTag[]
  media       ProductMedia[]
  variants    ProductVariant[]

  tenant      Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@unique([tenantId, handle])
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String

  title       String?
  sku         String?
  barcode     String?
  price       Int
  currency    String   @default("USD")
  compareAt   Int?
  cost        Int?

  weightGrams Int?
  option1Name String?
  option1Value String?
  option2Name String?
  option2Value String?
  option3Name String?
  option3Value String?

  isActive    Boolean  @default(true)

  inventory   InventoryItem?
  orderItems  OrderItem[]
  cartItems   CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, sku])
}

model InventoryItem {
  id            String @id @default(cuid())
  variantId     String @unique
  stockOnHand   Int    @default(0)
  stockReserved Int    @default(0)
  lowStockThreshold Int @default(5)
  allowBackorder Boolean @default(false)

  variant ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
}

model ProductMedia {
  id        String @id @default(cuid())
  productId String
  url       String
  alt       String?
  position  Int @default(0)
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductCategory {
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  @@id([productId, categoryId])
}

model ProductTag {
  productId String
  tagId     String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  @@id([productId, tagId])
}

model Cart {
  id          String   @id @default(cuid())
  tenantId    String
  customerId  String?
  email       String?
  currency    String   @default("USD")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  abandonedAt DateTime?

  items       CartItem[]
  customer    Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String
  variantId String
  quantity  Int @default(1)
  unitPrice Int

  cart      Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)
  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Restrict)

  @@unique([cartId, variantId])
}

model ShippingZone {
  id        String @id @default(cuid())
  tenantId  String
  name      String
  countries String[]
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  methods   ShippingMethod[]
  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model ShippingMethod {
  id        String @id @default(cuid())
  tenantId  String
  zoneId    String?
  name      String
  price     Int
  currency  String @default("USD")
  minSubtotal Int?
  maxSubtotal Int?
  isActive  Boolean @default(true)
  etaDaysMin Int?
  etaDaysMax Int?
  createdAt DateTime @default(now())

  zone   ShippingZone? @relation(fields: [zoneId], references: [id], onDelete: SetNull)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model TaxSettings {
  id        String @id @default(cuid())
  tenantId  String @unique
  mode      String @default("AUTO")
  provider  String?
  isTaxInclusive Boolean @default(false)
  defaultRateBps Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Order {
  id            String      @id @default(cuid())
  tenantId      String
  customerId    String?
  status        OrderStatus @default(PENDING_PAYMENT)
  currency      String      @default("USD")

  subtotal      Int
  taxTotal      Int @default(0)
  shippingTotal Int @default(0)
  discountTotal Int @default(0)
  total         Int

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  items         OrderItem[]
  payments      Payment[]

  tenant        Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  variantId String
  title     String
  sku       String?
  quantity  Int
  unitPrice Int
  lineTotal Int

  order     Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Restrict)
}

model Payment {
  id           String @id @default(cuid())
  orderId      String
  provider     String
  providerRef  String
  status       PaymentStatus
  amount       Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  order        Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([provider, providerRef])
}

model Discount {
  id          String @id @default(cuid())
  tenantId    String

  code        String
  type        DiscountType
  appliesTo   DiscountAppliesTo @default(ORDER)

  value       Int
  currency    String?
  usageLimit  Int?
  usedCount   Int @default(0)
  startsAt    DateTime?
  endsAt      DateTime?
  isActive    Boolean @default(true)

  minSubtotal Int?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@unique([tenantId, code])
}

model GiftCard {
  id            String @id @default(cuid())
  tenantId      String
  code          String
  initialBalance Int
  balance       Int
  currency      String @default("USD")
  expiresAt     DateTime?
  isActive      Boolean @default(true)
  createdAt     DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@unique([tenantId, code])
}

model StoreCreditLedger {
  id         String @id @default(cuid())
  tenantId   String
  customerId String
  amount     Int
  currency   String @default("USD")
  reason     String
  meta       Json?
  createdAt  DateTime @default(now())

  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model LoyaltyRule {
  id        String @id @default(cuid())
  tenantId  String
  name      String
  event     String
  pointsPerUsdBps Int @default(100)
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model LoyaltyAccount {
  id         String @id @default(cuid())
  tenantId   String
  customerId String @unique
  points     Int @default(0)
  updatedAt  DateTime @updatedAt

  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Affiliate { id String @id @default(cuid()); tenantId String; code String; isActive Boolean @default(true); createdAt DateTime @default(now()); tenant Tenant @relation(fields:[tenantId],references:[id],onDelete:Cascade); @@unique([tenantId,code]) }
model NewsletterSubscriber { id String @id @default(cuid()); tenantId String; email String; status String @default("ACTIVE"); createdAt DateTime @default(now()); tenant Tenant @relation(fields:[tenantId],references:[id],onDelete:Cascade); @@unique([tenantId,email]) }
model BlogPost { id String @id @default(cuid()); tenantId String; title String; slug String; content String; status String @default("DRAFT"); createdAt DateTime @default(now()); updatedAt DateTime @updatedAt; tenant Tenant @relation(fields:[tenantId],references:[id],onDelete:Cascade); @@unique([tenantId,slug]) }

model ImportJob {
  id        String @id @default(cuid())
  tenantId  String
  type      String
  status    ImportStatus @default(QUEUED)
  fileUrl   String
  mapping   Json
  options   Json?
  result    Json?
  progress  Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model AppIntegration { id String @id @default(cuid()); tenantId String; name String; webhookUrl String; secret String; isActive Boolean @default(true); createdAt DateTime @default(now()); tenant Tenant @relation(fields:[tenantId],references:[id],onDelete:Cascade) }
